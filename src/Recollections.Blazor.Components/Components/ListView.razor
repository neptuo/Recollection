@typeparam T

@if (IsLoading)
{
    <span>Loading...</span>
}
else if (Items == null || Items.Count == 0)
{
    if (EmptyContent != null)
    {
        @EmptyContent
    }
    else
    {
        <Alert Mode="@AlertMode.Warning" Message="@EmptyMessage" />
    }
}
else
{
    foreach (var item in Items)
    {
        @ChildContent(item);
    }
}