<div @ref="Container" class="modal fade" tabindex="-1" role="dialog">
    <div class="@DialogCssClass" role="document">
        <form @onsubmit="@OnFormSubmit" @onsubmit:preventDefault="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Title</h4>
                    <button class="close" @onclick="@Hide">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    @Buttons
                    <button class="btn btn-default btn-sm" @onclick="@OnCloseButtonClick">@CloseButtonText</button>
                </div>
            </div>
        </form>
    </div>
</div> 
