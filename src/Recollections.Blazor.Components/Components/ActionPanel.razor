<div class="actions row">
    @if (ChildContent != null)
    {
        <div class="col-12">
            @ChildContent
        </div>
    }

    @if (LeftContent != null)
    {
        <div class="left-actions col-sm-12 col-md-6">
            @LeftContent
        </div>
    }

    @if (RightContent != null)
    {
        <div class="right-actions col-sm-12 col-md-6">
            @RightContent
        </div>
    }
</div>

@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment LeftContent { get; set; }

    [Parameter]
    public RenderFragment RightContent { get; set; }
}