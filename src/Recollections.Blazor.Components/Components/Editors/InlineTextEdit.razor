@inherits InlineTextEditModel

<div class="inline-editor @GetModeCssClass()">
    @if (IsEditMode)
    {
        <form class="form-inline" onsubmit="@OnSaveValueAsync">
            <input type="text" class="form-control" bind="@Value" autofocus />
            <button class="btn btn-link">
                <Icon Identifier="check" />
            </button>
            <button class="btn btn-link" onclick="@OnResetAsync">
                <Icon Identifier="x" />
            </button>
        </form>
    }
    else
    {
        <span class="inline-editor-value" onclick="@OnEdit">
            <Icon Identifier="pencil" />

            @if (String.IsNullOrEmpty(Value))
            {
                <span class="inline-editor-content placeholder">@(PlaceHolder ?? "No value...")</span>
            }
            else
            {
                <span class="inline-editor-content">@Value</span>
            }
        </span>
    }
</div>
