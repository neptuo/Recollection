@inherits InlineMarkdownEditModel

<div class="inline-editor inline-markdown @GetModeCssClass()">
    @if (IsEditMode)
    {
        <form onsubmit="@OnSaveValueAsync">
            <textarea id="@TextAreaId" class="form-control" />
            <button type="submit" class="btn btn-link inline-submit" title="Save changes">
                <Icon Identifier="check" />
            </button>
            <button class="btn btn-link inline-submit" onclick="@OnResetAsync" title="Revert changes">
                <Icon Identifier="x" />
            </button>
        </form>
    }
    else
    {
        <a class="inline-editor-value" onclick="@OnEdit">
            <Icon Identifier="pencil" />

            @if (String.IsNullOrEmpty(Value))
            {
                <span class="inline-editor-content placeholder">@(PlaceHolder ?? "No value...")</span>
            }
            else
            {
                <span class="inline-editor-content">@MarkdownValue</span>
            }
        </a>
    }
</div>
