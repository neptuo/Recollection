@page "/"

<div class="timeline">
    <TimelineItem>
        <EntryCreate />
    </TimelineItem>

    @foreach (var entry in Entries)
    {
        <TimelineItem>
            <div class="entry">
                <h2>
                    <a href="@Navigator.UrlEntryDetail(entry.Id)">
                        @entry.Title
                    </a>
                </h2>

                <span class="datetime">
                    <Icon Identifier="calendar" />
                    @entry.When.ToString(UiOptions.DateFormat)
                </span>

                @if (!String.IsNullOrEmpty(entry.StoryTitle) || !String.IsNullOrEmpty(entry.ChapterTitle))
                {
                    <span class="story">
                        <Icon Identifier="book" />

                        @entry.StoryTitle
                        @if (!String.IsNullOrEmpty(entry.ChapterTitle))
                        {
                            <span>
                                - @entry.ChapterTitle
                            </span>
                        }
                    </span>
                }

                @if(entry.GpsCount > 0)
                {
                    <span class="gps">
                        <Icon Identifier="location" />
                        @entry.GpsCount
                    </span>
                }

                @if(entry.ImageCount > 0)
                {
                    <span class="gps">
                        <Icon Identifier="image" />
                        @entry.ImageCount
                    </span>
                }
            </div>
        </TimelineItem>
    }

    @if (HasMore)
    {
        <div class="center">
            <button class="btn btn-outline-primary" @onclick="@LoadMoreAsync">More...</button>
        </div>
    }
</div>
