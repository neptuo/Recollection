<Modal @ref="Modal" OnFormSubmit="ExecuteAsync">
    <TitleContent>
        <Icon Identifier="key" />
        Change password
    </TitleContent>
    <ChildContent>
        <Validation ErrorMessages="ErrorMessages" />
        
        @if (IsChanged)
        {
            <Alert Mode="AlertMode.Success" CssClass="py-2">
                <Icon Identifier="check" CssClass="me-1" />
                You password has been changed...
            </Alert>
        }

        <div class="mb-4">
            <input class="form-control" type="password" placeholder="Current password" @bind="Current" />
        </div>
        <div class="mb-3">
            <input class="form-control" type="password" placeholder="New password" @bind="New" />
        </div>
        <div class="mb-3">
            <input class="form-control" type="password" placeholder="Confirm new password" @bind="ConfirmNew" />
        </div>
    </ChildContent>
    <Buttons>
        <button class="btn btn-salmon btn-sm" type="submit">Do it</button>
    </Buttons>
</Modal>