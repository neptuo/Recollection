@page  "/register"

<div class="component-login text-center">
    <form @onsubmit="@RegisterAsync">

        <h1 class="h3 font-weight-normal">Recollections</h1>
        <h2 class="h4 mb-3 font-weight-normal">Registration</h2>

        <Validation ErrorMessages="ErrorMessages" />

        <label for="UserName" class="sr-only">Username:</label>
        <input type="text" id="UserName" class="form-control" placeholder="Username:" @bind="UserName" />
        <label for="Password" class="sr-only">Password:</label>
        <input type="password" id="Password" class="form-control" placeholder="Password:" @bind="Password" />

        <div class="mb-3">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
        </div>
        <div class="mb-3">
            <a href="@Navigator.UrlLogin()">I already have an account</a>
        </div>
    </form>
</div>
