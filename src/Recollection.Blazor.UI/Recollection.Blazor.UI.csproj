<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <RootNamespace>Neptuo.Recollection</RootNamespace>
    <VersionPrefix>1.0.0.0</VersionPrefix>
    
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RazorLangVersion>3.0</RazorLangVersion>
    <RestoreAdditionalProjectSources>
      https://dotnet.myget.org/F/aspnetcore-dev/api/v3/index.json;
      https://dotnet.myget.org/F/blazor-dev/api/v3/index.json;
    </RestoreAdditionalProjectSources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Blazor" Version="3.0.0-preview5-19227-01" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.Build" Version="3.0.0-preview5-19227-01" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.DevServer" Version="3.0.0-preview5-19227-01" PrivateAssets="all" />
    <PackageReference Include="Neptuo" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.razor.cs" DependentUpon="%(Filename)" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Update="wwwroot\index.html">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <Watch Include="**\*.razor" />
  </ItemGroup>
  
  <ItemGroup>
    <Watch Remove="Accounts\Components\UserState.razor" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="wwwroot\css\open-iconic\css\open-iconic-bootstrap.scss" />
    <None Include="wwwroot\css\open-iconic\fonts\open-iconic.svg" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Recollection.Api.Shared\Recollection.Api.Shared.csproj" />
  </ItemGroup>
</Project>
