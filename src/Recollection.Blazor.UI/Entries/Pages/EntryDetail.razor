@page "/entry/{EntryId}"
@inherits EntryDetailModel

@if (Model != null)
{
    <div class="entry-detail">
        <h2 class="title">
            <InlineTextEdit Value="@Model.Title" ValueChanged="@(value => { Model.Title = "Test: " + value; Console.WriteLine($"Changed to: {value}."); })" />
        </h2>
        <div class="datetime">
            <Icon Identifier="calendar" />
            <InlineTextEdit Value="@Model.When.ToLongDateString()" />
        </div>
        <div class="text">
            <InlineTextEdit Value="@Model.Text" PlaceHolder="No description provided..." />
        </div>
    </div>
}