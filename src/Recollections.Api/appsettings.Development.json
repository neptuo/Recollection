{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Accounts": {
    "ConnectionString": "Filename={BasePath}/Accounts.db",
    "Jwt": {
      "SecurityKey": "abcdefghijklxnop",
      "Issuer": "https://localhost",
      "ExpiryInDays": 14
    },
    "Identity": {
      "Password": {
        "RequireDigit": false,
        "RequiredLength": 4,
        "RequireLowercase": false,
        "RequireNonAlphanumeric": false,
        "RequireUppercase": false
      }
    }
  },
  "Entries": {
    "ConnectionString": "Filename={BasePath}/Entries.db",
    "Storage": {
      "PathTemplate": "C:/Temp/Recollections/{UserId}/{EntryId}",
      "MaxLength": 100000,
      "SupportedExtensions": [ ".png", ".jpg", ".jpeg", ".gif" ]
    }
  }
}
